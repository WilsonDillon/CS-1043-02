
public class Exam2Review {
	public static void main(String[] args) {

		//2
		System.out.println("#2");
		for ( int i = 1; i <= 4; i++) {
			for ( int x = 1; x <= i; x++ ) {
				System.out.print("*");
			}
			System.out.println();
		}
		for (int i = 1; i <= 4; i++) {
			for (int x = 4; x < i; x--) {
				System.out.print(" ");
			}
			for ( int y = 1; y <= i; y++ ) {
				System.out.print("*");
			}
			System.out.println();
		}

	}
}
